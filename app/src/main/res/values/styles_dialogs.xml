<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.Cinephile.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Widget.Cinephile.Dialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Widget.Cinephile.Dialog.Body</item>
    </style>

    <style name="Widget.Cinephile.Dialog.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
    </style>

    <style name="Widget.Cinephile.Dialog.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
    </style>

    <style name="Widget.Cinephile.Dialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_theme_dark_primary</item>
    </style>
</resources>


